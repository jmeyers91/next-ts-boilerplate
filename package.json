{
  "name": "next-ts-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "scripts/start.js",
  "scripts": {
    "test": "npm run test-client && npm run test-api",
    "postinstall": "[[ $RUN_MODE = 'API' ]] && npm run install-api || npm run install-client",
    "start": "[[ $RUN_MODE = 'API' ]] && npm run start-api || npm run start-client",
    "install-client": "cd client && npm i",
    "install-api": "cd api && npm i",
    "start-client": "cd client && npm run start",
    "start-api": "cd api && npm run start",
    "test-client": "cd client && npm run test",
    "test-api": "cd api && npm run test",
    "format": "prettier --write \"{client/src,client/server,api/src,api/scripts}/**/*.{ts,tsx,json}\"",
    "lint": "tslint -c tslint.json \"{client/src,client/server,api/src,api/scripts}/**/*.{ts,tsx}\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines" : {
    "node" : "~10.11.0",
    "npm": "~6.4.1"
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "tslint": "^5.13.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3333"
  },
  "lint-staged": {
    "*.ts": [
      "tslint",
      "prettier --write",
      "git add"
    ],
    "*.tsx": [
      "tslint",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
