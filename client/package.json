{
  "name": "next-ts-boilerplate-client",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server/index.js",
  "scripts": {
    "test": "NODE_ENV=test jest",
    "clean": "rm -rf dist",
    "watch": "ts-node --files --project server/tsconfig.json server",
    "clean-client": "rm -rf dist/src",
    "clean-server": "rm -rf dist/server",
    "clean-next": "rm -rf dist/src/.next",
    "build-client-assets": "cp -R src/assets dist/src/assets",
    "build-client": "tsc && npm run build-client-assets",
    "build-server": "tsc -p server/tsconfig.json && cp server/.babelrc.prod.json dist/server/.babelrc",
    "build-next": "node dist/server/build.js",
    "build": "npm run clean && npm run build-client && npm run build-server && npm run build-next",
    "start": "NODE_ENV=production node dist/server",
    "format": "prettier --write \"{src,server}/**/*.{ts,tsx,json}\"",
    "lint": "tslint -c tslint.json \"{src,server}/**/*.ts\""
  },
  "author": "Emberex",
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/enzyme": "^3.9.0",
    "@types/http-proxy": "^1.16.2",
    "@types/jest": "^24.0.10",
    "@types/next": "^8.0.1",
    "@types/node": "^11.9.4",
    "@types/react": "^16.8.3",
    "@types/react-dom": "^16.8.2",
    "@types/styled-components": "^4.1.10",
    "@types/zeit__next-typescript": "^0.1.2",
    "@zeit/next-typescript": "^1.1.1",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.10.0",
    "jest": "^24.3.1",
    "jest-environment-enzyme": "^7.0.2",
    "jest-enzyme": "^7.0.2",
    "prettier": "^1.16.4",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.2",
    "tslint": "^5.13.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3",
    "typescript-styled-plugin": "^0.13.0"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "http-proxy": "^1.17.0",
    "next": "^8.0.1",
    "next-images": "^1.0.4",
    "react": "^16.8.2",
    "react-dom": "^16.8.2",
    "styled-components": "^4.1.3"
  }
}
