{
  "name": "api",
  "version": "1.0.0",
  "description": "",
  "main": "dist/start.js",
  "scripts": {
    "test": "NODE_ENV=test jest",
    "start": "node dist/start.js",
    "migrate": "([[ $NODE_ENV = 'development' ]] && (npm run build && node dist/migrate.js) || node dist/migrate.js)",
    "seed": "([[ $NODE_ENV = 'development' ]] && (npm run build && node dist/seed.js) || node dist/seed.js)",
    "clean": "rm -rf dist",
    "drop": "rm *.sqlite3",
    "refresh": "npm run drop && npm run migrate",
    "build": "npm run clean && mkdir -p dist && rollup -c",
    "watch-src": "rollup -c --watch",
    "watch-dist": "nodemon --watch dist/start.js dist/start.js",
    "watch": "concurrently \"npm run watch-src\" \"npm run watch-dist\"",
    "run-ts-script": "ts-node  -O '{\"module\": \"commonjs\"}'",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
    "lint": "tslint -c tslint.json \"src/**/*.ts\""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "ajv": "^6.9.2",
    "chalk": "^2.4.2",
    "dotenv": "^6.2.0",
    "json-schema": "^0.2.3",
    "jsonwebtoken": "^8.5.0",
    "knex": "^0.16.3",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "koa-helmet": "^4.1.0",
    "koa-jwt": "^3.5.1",
    "koa-router": "^7.4.0",
    "objection": "^1.6.3",
    "reflect-metadata": "^0.1.13",
    "runtypes": "^3.1.2",
    "sqlite3": "^4.0.6",
    "typescript-is": "^0.10.1"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.0",
    "@types/jest": "^24.0.11",
    "@types/json-schema": "^7.0.3",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/knex": "^0.15.2",
    "@types/koa": "^2.0.48",
    "@types/koa-bodyparser": "^4.2.2",
    "@types/koa-helmet": "^3.1.2",
    "@types/koa-router": "^7.0.40",
    "chokidar": "^2.1.2",
    "concurrently": "^4.1.0",
    "jest": "^24.4.0",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "rollup": "^1.6.0",
    "rollup-plugin-typescript2": "^0.19.3",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.2",
    "tslint": "^5.13.1",
    "tslint-config-prettier": "^1.18.0",
    "ttypescript": "^1.5.6",
    "typescript": "^3.3.3333"
  }
}
